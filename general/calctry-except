def calculator():
    print("Welcome to the four-function calculator!")
    print("Type 'exit' to quit.")
    print("Enter operations like: 3 + 4, 10 / 2, 5 * 6, 8 - 3")

    while True:
        user_input = input("Enter your operation: ").strip()
        if user_input.lower() == "exit":
            print("Goodbye!")
            break

        try:
            parts = user_input.split()
            if len(parts) != 3:
                raise ValueError("Invalid format. Use: number operator number")

            num1, operator, num2 = parts
            num1 = float(num1)
            num2 = float(num2)

            if operator == '+':
                try:
                    result = num1 + num2
                    print(f"Result: {result}")
                except Exception as e:
                    print(f"Addition error: {e}")
            elif operator == '-':
                try:
                    result = num1 - num2
                    print(f"Result: {result}")
                except Exception as e:
                    print(f"Subtraction error: {e}")
            elif operator == '*':
                try:
                    result = num1 * num2
                    print(f"Result: {result}")
                except Exception as e:
                    print(f"Multiplication error: {e}")
            elif operator == '/':
                try:
                    result = num1 / num2
                    print(f"Result: {result}")
                except Exception as e:
                    print(f"Division error: {e}")
            else:
                print("Unsupported operator. Use +, -, *, or /.")
        except Exception as e:
            print(f"Input error: {e}")

calculator()
